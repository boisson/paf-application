<header>
  <div class="navbar navbar-fixed-top">
    <div class="navbar-inner">
      <div class="container-fluid">
        <a class="brand" href="<%= root_path %>"><i class="icon-home icon-white"></i> <%= APPLICATION_CENTRAL_NAME %></a>
        <ul class="nav user_menu pull-right">
          <li class="dropdown">
            <a href="#" class="dropdown-toggle nav_condensed" data-toggle="dropdown"><i class="flag-<%= current_language['code'] %>"></i> <b class="caret"></b></a>
            <ul class="dropdown-menu">
            <% languages_except_current.each do |proteste_language| %>
            <li><a href="<%=proteste_generate_application_change_locale_path(proteste_language['code'])%>"><i class="flag-<%=proteste_language['code']%>"></i> <%=proteste_language['name'] %></a></li>
            <% end -%>
            </ul>
          </li>
          <li class="divider-vertical hidden-phone hidden-tablet"></li>
          <li><%=link_to '<i class="splashy-printer"></i>'.html_safe, 'javascript:window.print()', title: t('general.actions.print') %></li>
          <li class="divider-vertical hidden-phone hidden-tablet"></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= image_tag(avatar_url(current_user, 20)) %>  <%= current_user.name %> <b class="caret"></b></a>
            <ul class="dropdown-menu">
              <li><%=link_to t('general.actions.user_profile.my_profile'), '#', id: 'btn-my-profile' %></li>
              <li><%=link_to t('general.actions.user_profile.edit_password'), '#edit_password', data: {toggle: 'modal'} %></li>
              <li><%=link_to t('general.terms.about'), '#about', data: {toggle: 'modal'} %></li>
              <li><%=link_to t('general.actions.logout'), proteste_auth_logout_path %></li>
            </ul>
          </li>
        </ul>
        <nav>
          <div class="nav-collapse">
            <ul class="nav">
              <%= build_menu_at_top %>
              <%=yield(:menu_at_top) if content_for?(:menu_at_top) %>
            </ul>
          </div>
        </nav>
      </div>
    </div>
  </div>
</header>


<%= render partial: 'layouts/profile' %>
<%= render partial: 'layouts/edit_password' %>
<%= render partial: 'layouts/about' %>
